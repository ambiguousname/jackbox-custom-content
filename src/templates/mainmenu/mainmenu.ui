<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<template class="JCCMainMenuWindow" parent="GtkApplicationWindow">
		<property name="title" translatable="yes">Jackbox Party Pack 7 Custom Content</property>
		<child type="titlebar">
			<object class="GtkHeaderBar">
				<child type="end">
					<object class="GtkButton" id="new_content">
						<property name="label">New Content</property>
						<property name="icon-name">list-add-symbolic</property>
						<property name="tooltip-text">Add new content</property>
						<signal name="clicked" handler="handle_create_content_clicked" swapped="true"/>
					</object>
				</child>
			</object>
		</child>
		<child>
			<object class="GtkStack">
				<property name="halign">fill</property>
				<property name="hexpand">true</property>
				<child>
					<object class="GtkPaned" id="mod_selection">
						<child>
							<object class="GtkBox">
								<child>
									<object class="GtkStackSidebar">
										<property name="stack">mod_stack</property>
									</object>
								</child>
								<property name="orientation">vertical</property>
								<child>
									<object class="GtkButton">
										<property name="valign">end</property>
										<property name="vexpand">true</property>
										<property name="label">New Mod</property>
										<property name="icon-name">folder-new-symbolic</property>
										<property name="tooltip-text">Add new mod</property>
										<signal name="clicked" handler="handle_new_mod" swapped="true"/>
									</object>
								</child>
							</object>
						</child>
						<child>
							<object class="GtkStack" id="mod_stack">
								<property name="halign">center</property>
								<property name="hexpand">true</property>
							</object>
						</child>
					</object>
				</child>
				<!--If we need to select the Jackbox Party Pack 7 folder instead. -->
				<child>
					<object class="GtkBox" id="folder_box">
						<property name="visible">false</property>
						<property name="orientation">vertical</property>
						<property name="spacing">12</property>
						<child>
							<object class="GtkLabel">
								<property name="label">Jackbox Party Pack 7 folder not detected.</property>
							</object>
						</child>
						<child>
							<object class="GtkButton" id="start_file_selection">
								<property name="label">Choose Folder...</property>
							</object>
						</child>
					</object>
				</child>
			</object>
		</child>
	</template>
</interface>