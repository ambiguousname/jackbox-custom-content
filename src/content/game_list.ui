<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<template class="JCCGameList" parent="GtkBox">
		<child>
			<!-- ListView is not subclassable (nor can I just "import" a list store from this folder), so this is the workaround. -->
			<object class="GtkListView">
				<property name="factory">
					<object class="GtkBuilderListItemFactory">
						<property name="resource">/content/game.ui</property>
					</object>
				</property>
				<property name="model">
					<object class="GtkSingleSelection" id="game_select_model">
						<!-- Because of GTK limitations, we need to create the TreeListModel on creation. -->
						<!-- <property name="model">
							<object class="GtkTreeListModel">

							</object>
						</property> -->
					</object>
				</property>
				<property name="tab-behavior">item</property>
				<style>
					<class name="navigation-sidebar"/>
				</style>
			</object>
		</child>
	</template>
</interface>